    ViewData["Title"] = "Create";
}
<br />
<br />
<br />
<br />
<br />

<div align="center" class="jumbotron">

<h4>Nuevo Restaurante</h4>
<div >
    <div >
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="nombre" class="control-label"></label><br />
                <input asp-for="nombre" class="caja" />
                <span asp-validation-for="nombre" class="text-danger"></span>
            </div><br />
                <div class="form-group">
                    <label asp-for="Imagen" class="control-label"></label><br />
                    <input asp-for="Imagen" class="caja" />
                    <span asp-validation-for="Imagen" class="text-danger"></span>
                </div><br />
                <div class="form-group">
                    <label asp-for="Direccion" class="control-label"></label><br />
                    <input asp-for="Direccion" class="caja" />
                    <span asp-validation-for="Direccion" class="text-danger"></span>
                </div><br />
                <div class="form-group">
                    <label asp-for="Url" class="control-label"></label><br />
                    <input asp-for="Url" class="caja" />
                    <span asp-validation-for="Url" class="text-danger"></span>
                </div><br />
            <div class="form-group">
                    <input type="submit" value="Añadir" class="btn btn-outline-dark my-3" />
            </div>
        </form>
    </div>
</div>
</div>
<div>
    <a asp-action="Index">volver atras</a>
</div>

