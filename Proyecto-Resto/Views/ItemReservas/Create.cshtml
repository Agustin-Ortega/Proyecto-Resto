@model Proyecto_Resto.Models.ItemReserva

@{
    ViewData["Title"] = "Create";
}

<br />
<br />
<br />
<br />
<br />

<div align="center" class="jumbotron">

<h4>Plato</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="idPlato" class="control-label"></label>
                <select asp-for="idPlato" class ="form-control" asp-items="ViewBag.idPlato" id="ItemPlatoId"></select>
            </div>
            <div class="form-group">
                    <input type="submit" value="Agregar plato a menu" class="btn btn-outline-dark my-3" />
            </div>
        </form>
    </div>
    <div class="col-md-8 text-center">
        <div class="card" style="width: 25rem;">
            <img  class="card-img-top" id="FotoTarjeta" height="350">
            <div class="card-body">
                <h5 class="card-title" id="TituloTarjeta"></h5>
                <p class="card-text" id="TextoTarjeta"></p>
                <p class="text-success" id="PrecioTarjeta"></p>
            </div>
        </div>
    </div>
</div>
</div>
<div>
    <a asp-action="Index">volver atras</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
