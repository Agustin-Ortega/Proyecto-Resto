@*SUBMENU*@

@if (User.IsInRole("CLIENTE") || User.IsInRole("ADMIN"))
            {
    <table class="tabla">

        <tr class="fila">


            @if (User.IsInRole("CLIENTE")){


                <th class="columna">
                    <a class="nav-link text-white" asp-area="" asp-controller="Platos" asp-action="Index">Ver Menu</a>
                </th>


                    <th class="columna">
                <a class="nav-link text-white" asp-area="" asp-controller="Restaurantes" asp-action="Index">Ver Restaurantes</a>
            </th>

                  <th class="columna">
                <a class="nav-link text-white" asp-area="" asp-controller="ItemReservas" asp-action="Index">Hacer Reserva</a>
            </th>

            }
            else if(User.IsInRole("ADMIN")){
                <th class="columna">
                    <a class="nav-link text-white" asp-area="" asp-controller="Platos" asp-action="Index">Administrar Platos</a>
                </th>
                 <th class="columna">
                <a class="nav-link text-white" asp-area="" asp-controller="Restaurantes" asp-action="Index">Restaurantes</a>
            </th>

            <th>
                    <a class="nav-link text-white" asp-area="" asp-controller="Clientes" asp-action="Informe1">Informe de Ganancias</a>
                </th>

            }

        </tr>
    </table>
            }




            <container>

    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/img/bebidas.jpg" class="d-block w-100">
            </div>
            <div class="carousel-item">
                <img src="~/img/bebidas.jpg" class="d-block w-50">
            </div>
            <div class="carousel-item">
                <img src="~/img/bebidas.jpg" class="d-block w-50">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-target="#carouselExampleIndicators" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-target="#carouselExampleIndicators" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </button>
    </div>
            </container>

