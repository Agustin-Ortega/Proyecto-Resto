<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] -Resto - ORT</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Proyecto_Resto.styles.css" asp-append-version="true" />
</head>
<body> 
    <header>
        @*<a class="nav-link disabled"></a>*@
        @*NAVBAR*@

        <nav class="navbar navbar-expand-lg navbar-light bg-dark">
             <img src="~/img/cafe.png" width="50px" height="50px" />
            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Resto ORT</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav">

                    @if (User.IsInRole("CLIENTE") || User.IsInRole("ADMIN"))
                        {
                        <a class="nav-link text-white" asp-area="" asp-controller="Clientes" asp-action="Index">Clientes</a>
                        <a class="nav-link text-white" asp-area="" asp-controller="Clientes" asp-action="PersonalDetail">Mis Datos</a>
                        <a class="nav-link text-white" asp-area="" asp-controller="Reservas" asp-action="Index">Reservas</a>
                    }

                    @*<a class="nav-link text-white" asp-area="" asp-controller="Clientes" asp-action="Informe1">Informe</a>       *@             
                </div>

            </div>       

            @if (User.IsInRole("CLIENTE"))
            {
                <a class="nav-link disabled">Perfil Cliente</a>
            }
            else if (User.IsInRole("ADMIN"))
            {
                <a class="nav-link disabled">Perfil Administrador</a>
            }

                <partial name="_LoginPartial" />                        
        </nav>
       
        <br />

        <container>

        </container>

        @*SUBMENU*@


    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>

            &copy; 2022   |   Resto ORT - Agustin Ortega   | <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
       
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
